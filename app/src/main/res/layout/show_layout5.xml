<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView android:id="@+id/show5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/index_show"
        android:contentDescription="@string/showImage"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/goIndexBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:background="@drawable/goindexbut"
        android:onClick="getOnclick"
        android:padding="10dip"
        android:text="@string/goIndexBut"
        android:textColor="@color/activitybag" />
</RelativeLayout>
