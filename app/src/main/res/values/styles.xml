<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    <!-- 一般基础控件样式排版 -->
    <style name="menustyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@color/activitybag</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="menutitlestyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="footimage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:onClick">clickImage</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>     
    </style>
    
    
    
    <style name="dialog"  >
	      <item name="android:windowBackground">@android:color/transparent</item>    
	    <item name="android:windowNoTitle">true</item>    
	    <item name="android:windowIsTranslucent">true</item> 
    </style>
    
    <style name="networkbut">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
    </style>
    
    
    <style name="quick_buy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">5pt</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    

</resources>
